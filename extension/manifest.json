{
	"name": "QuikFill Extension",
	"description": "Job application form filling extension",
	"version": "1.0",
	"manifest_version": 3,
	"content_scripts": [
		{
			"js": ["scripts/content.js"],
			"matches": ["<all_urls>"],
			"run_at": "document_idle"
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["img/*", "popup/popup.html", "popup/home.html"],
			"matches": ["<all_urls>"]
		}
	],
  	"host_permissions": ["<all_urls>"],
  	"options_page": "options/options.html",
  	"default_locale": "en",
  	"browser_action": {
  		"default_icon": "img/icon-16.png"
  	},
	"permissions": ["identity", "storage"],
  	"oauth2": {
		"client_id": "290587789881-mffs67ffrv8o78766jr2rk4hqltc3ue2.apps.googleusercontent.com",
		"scopes": ["email", "profile"]
  	},
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": "img/icon-16.png"
	},
	"background": {
		"service_worker": "scripts/background.js"
	},
	"icons": {
		"16": "img/icon-16.png",
		"48": "img/icon-48.png"
	}
}
